    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb-hello",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/self-project/hello",
            "args": [
                "${fileDirname}/h264_aac_2.6M_dance.ts"
            ],
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/deps/lib"
                }
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "gdb-decoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/self-project/decoder",
            "args": [
                "${fileDirname}/h264_aac_2.6M_dance.ts"
            ],
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/deps/lib"
                }
            ],
            "cwd": "${workspaceFolder}/self-project"
        },
        {
            "name": "gdb-transcode",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/self-project/transcode",
            "args": [
                "-i",
                "${fileDirname}/h264_aac_2.6M_dance.ts",
                // "--vcodec",
                // "h265",
                // "--acodec",
                // "aac",
                "-o",
                "${fileDirname}/trans.ts"
            ],
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/deps/lib"
                }
            ],
            "cwd": "${workspaceFolder}/self-project"
        }
