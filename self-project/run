#!/bin/bash

case "$1" in
	hello)
	LD_LIBRARY_PATH=../build/lib ./hello ${@:2}
	;;
	remuxer)
	LD_LIBRARY_PATH=../build/lib ./remuxer ${@:2}
	;;
	decoder)
	LD_LIBRARY_PATH=../build/lib ./decoder ${@:2}
	;;
	transcode)
	LD_LIBRARY_PATH=../build/lib ./transcode ${@:2}
	;;
	clear)
	rm *.flv *.mp4 *.pgm -f
	;;
    *)
	echo "Usage: run.sh {start|clear} "
	exit 1
esac

exit $?